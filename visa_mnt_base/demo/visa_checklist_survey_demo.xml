<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="survey.survey" id="visa_application_survey_template">
            <field name="title">Visa Application Form</field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="access_mode">token</field>
            <field name="is_attempts_limited" eval="True"/>
            <field name="users_can_go_back" eval="True" />
            <field name="description" type="html">
                <p>This survey is part of your visa application process. Please fill out all required information accurately. Your responses will be reviewed by immigration officials.</p>
            </field>
        </record>

        <!-- Introduction Page -->
        <record model="survey.question" id="visa_application_intro">
            <field name="title">Visa Application Process Overview</field>
            <field name="survey_id" ref="visa_application_survey_template"/>
            <field name="is_page" eval="True"/>
            <field name="question_type" eval="False"/>
            <field name="sequence">1</field>
            <field name="description" type="html">
                <h2>Important Information for Visa Applicants</h2>
                <ul>
                    <li>Ensure all information provided is accurate and complete.</li>
                    <li>False statements may result in visa denial and future immigration consequences.</li>
                    <li>You may save your progress and return to complete the application later.</li>
                    <li>After submission, you may be required to provide additional documentation or attend an interview.</li>
                </ul>

                <h3>Required Documents</h3>
                <ul>
                    <li>Valid passport</li>
                    <li>Passport-sized photograph</li>
                    <li>Proof of financial means</li>
                    <li>Purpose of travel documentation</li>
                    <li>Health and character certificates (as required)</li>
                </ul>

                <h3>Processing Time</h3>
                <p>Processing times vary depending on the type of visa and current application volumes. You will be notified of any updates to your application status.</p>
            </field>
        </record>

        <!-- Personal Information Page -->
        <record model="survey.question" id="visa_application_personal_info">
            <field name="title">Personal Information</field>
            <field name="survey_id" ref="visa_application_survey_template"/>
            <field name="is_page" eval="True"/>
            <field name="question_type" eval="False"/>
            <field name="sequence">2</field>
        </record>

        <record model="survey.question" id="visa_application_name">
            <field name="survey_id" ref="visa_application_survey_template" />
            <field name="sequence">3</field>
            <field name="title">Full Name (as shown in passport)</field>
            <field name="question_type">text_box</field>
            <field name="constr_mandatory" eval="True" />
        </record>

        <record model="survey.question" id="visa_application_dob">
            <field name="survey_id" ref="visa_application_survey_template" />
            <field name="sequence">4</field>
            <field name="title">Date of Birth</field>
            <field name="question_type">date</field>
            <field name="constr_mandatory" eval="True" />
        </record>

        <record model="survey.question" id="visa_application_nationality">
            <field name="survey_id" ref="visa_application_survey_template" />
            <field name="sequence">5</field>
            <field name="title">Nationality</field>
            <field name="question_type">text_box</field>
            <field name="constr_mandatory" eval="True" />
        </record>

        <record model="survey.question" id="visa_application_passport">
            <field name="survey_id" ref="visa_application_survey_template" />
            <field name="sequence">6</field>
            <field name="title">Passport Number</field>
            <field name="question_type">text_box</field>
            <field name="constr_mandatory" eval="True" />
        </record>

        <!-- Visa Information Page -->
        <record model="survey.question" id="visa_application_visa_info">
            <field name="title">Visa Information</field>
            <field name="survey_id" ref="visa_application_survey_template"/>
            <field name="is_page" eval="True"/>
            <field name="question_type" eval="False"/>
            <field name="sequence">7</field>
        </record>

        <record model="survey.question" id="visa_application_type">
            <field name="survey_id" ref="visa_application_survey_template" />
            <field name="sequence">8</field>
            <field name="title">Type of Visa Applying For</field>
            <field name="question_type">simple_choice</field>
            <field name="constr_mandatory" eval="True" />
        </record>
        <record model="survey.question.answer" id="visa_type_work">
            <field name="question_id" ref="visa_application_type"/>
            <field name="value">Work Visa</field>
        </record>
        <record model="survey.question.answer" id="visa_type_student">
            <field name="question_id" ref="visa_application_type"/>
            <field name="value">Student Visa</field>
        </record>
        <record model="survey.question.answer" id="visa_type_visitor">
            <field name="question_id" ref="visa_application_type"/>
            <field name="value">Visitor Visa</field>
        </record>

        <record model="survey.question" id="visa_application_purpose">
            <field name="survey_id" ref="visa_application_survey_template" />
            <field name="sequence">9</field>
            <field name="title">Purpose of Visit</field>
            <field name="question_type">text_box</field>
            <field name="constr_mandatory" eval="True" />
        </record>

        <record model="survey.question" id="visa_application_duration">
            <field name="survey_id" ref="visa_application_survey_template" />
            <field name="sequence">10</field>
            <field name="title">Intended Duration of Stay</field>
            <field name="question_type">text_box</field>
            <field name="constr_mandatory" eval="True" />
        </record>

        <!-- Additional pages and questions can be added here for 
             Travel History, Employment Information, Education Details, etc. -->

        <!-- Declaration Page -->
        <record model="survey.question" id="visa_application_declaration">
            <field name="title">Declaration</field>
            <field name="survey_id" ref="visa_application_survey_template"/>
            <field name="is_page" eval="True"/>
            <field name="question_type" eval="False"/>
            <field name="sequence">50</field>
            <field name="description" type="html">
                <p>I declare that the information I have given in this application is true and correct to the best of my knowledge. I understand that if any false or misleading information is given, or any material fact is suppressed, my application may be refused, or I may become liable for deportation.</p>
            </field>
        </record>

        <record model="survey.question" id="visa_application_agree">
            <field name="survey_id" ref="visa_application_survey_template" />
            <field name="sequence">51</field>
            <field name="title">I agree with the above declaration</field>
            <field name="question_type">simple_choice</field>
            <field name="constr_mandatory" eval="True" />
        </record>
        <record model="survey.question.answer" id="visa_agree_yes">
            <field name="question_id" ref="visa_application_agree"/>
            <field name="value">Yes, I agree</field>
        </record>
        <record model="survey.question.answer" id="visa_agree_no">
            <field name="question_id" ref="visa_application_agree"/>
            <field name="value">No, I do not agree</field>
        </record>

    </data>
</odoo>