<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_visa_management" model="ir.module.category">
        <field name="name">Visa Management</field>
    </record>

    <record id="group_visa_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_visa_management"/>
    </record>

    <record id="group_visa_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_visa_management"/>
        <field name="implied_ids" eval="[(4, ref('group_visa_user')), (4, ref('survey.group_survey_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>