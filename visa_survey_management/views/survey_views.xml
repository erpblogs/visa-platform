<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_survey_view_form_inherit_visa" model="ir.ui.view">
        <field name="name">survey.survey.view.form.inherit.visa</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="is_visa_checklist" invisible="1"/>
                <button name="action_view_visa_categories" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-list-alt"
                        invisible="[('is_visa_checklist', '=', False)]">
                    <field string="Visa Categories" name="visa_category_count" widget="statinfo"/>
                </button>
            </xpath>
            <notebook position="inside">
                <page string="Required Documents" invisible="[('is_visa_checklist', '=', False)]">
                    <field name="required_documents">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="document_type"/>
                            <field name="is_mandatory"/>
                            <field name="notes"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo> 