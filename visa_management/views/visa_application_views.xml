<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_visa_application_kanban" model="ir.ui.view">
        <field name="name">visa.application.kanban</field>
        <field name="model">visa.application</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column" 
                    quick_create="false" on_create="quick_create">
                <field name="stage_id" options='{"group_by_tooltip": {"description": "Description"}}'/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="create_date"/>
                <field name="date_submitted"/>
                <field name="priority" widget="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div>
                                    <field name="partner_id"/>
                                </div>
                                <div>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="category_id"/>
                                    </span>
                                </div>
                                <div class="text-muted">
                                    Submitted: <field name="date_submitted"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {
                                            'draft': 'default',
                                            'submitted': 'primary',
                                            'under_review': 'warning',
                                            'approved': 'success',
                                            'rejected': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_visa_application_form" model="ir.ui.view">
        <field name="name">visa.application.form</field>
        <field name="model">visa.application</field>
        <field name="arch" type="xml">
            <form string="Visa Application">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="category_id"/>
                        <field name="stage_id"/>
                        <field name="state"/>
                        <field name="priority"/>
                        <field name="date_submitted"/>
                        <field name="checklist_survey_id"/>
                        <field name="invoice_id"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Checklist">
                            <field name="checklist_user_input_id" widget="many2one"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_visa_application_tree" model="ir.ui.view">
        <field name="name">visa.application.tree</field>
        <field name="model">visa.application</field>
        <field name="arch" type="xml">
            <tree string="Visa Applications">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="category_id"/>
                <field name="stage_id"/>
                <field name="state"/>
                <field name="priority"/>
            </tree>
        </field>
    </record>

     <record id="view_visa_application_search" model="ir.ui.view">
        <field name="name">visa.application.search</field>
        <field name="model">visa.application</field>
        <field name="arch" type="xml">
            <search string="Search Visa Applications">
                <field name="name" string="Application Number"/>
                <field name="partner_id" string="Applicant"/>
                <field name="category_id" string="Visa Category"/>
                <field name="stage_id" string="Stage"/>
                <field name="state" string="Status"/>
                <field name="create_date" string="Application Date"/>
                
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Under Review" name="under_review" domain="[('state', '=', 'under_review')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                
                <filter string="My Applications" name="my_applications" domain="[('create_uid', '=', uid)]"/>
                <filter string="This Month" name="this_month" domain="[('create_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Applicant" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Visa Category" name="group_by_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Stage" name="group_by_stage" context="{'group_by': 'stage_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Application Month" name="group_by_month" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_visa_application" model="ir.actions.act_window">
        <field name="name">Visa Applications</field>
        <field name="res_model">visa.application</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_visa_application_search"/>
    </record>
</odoo>